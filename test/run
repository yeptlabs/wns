/**
 * Loads all tests and return the result.
 *
 * @author Pedro Nasser
 * @version $Id$
 * @since 1.0.12
 */

require('../src/wnInit');

var validTests = 0,
	lastErrors = 0,
	passedTests = 0,
	testTimeout = -1,
	testDir=cwd+'test/tmp',
	idleTimeout=-1;

if (fs.existsSync(testDir))
	wrench.rmdirSyncRecursive(testDir, function () {});
fs.mkdirSync(testDir,0755);

console.log('[*] Running tests on `'+testDir+'`...');

wns.console.setEvents({
	'endTest': {},
	'errorTest': {}
});

wns.console.errors=0;
wns.console.addListener('exception', function (err,e) {
	wns.console.errors++;
	wns.console.e.endTest();
	wns.console.e.errorTest(e);
});
wns.console.testDir = testDir;

function refreshIdle () {
	clearTimeout(idleTimeout);
	idleTimeout=setTimeout(function () {
		process.exit(1);
	},120000);
}
refreshIdle();

function getTests (cb) {
	var tests=fs.readdirSync('./test');
	cb&&cb(null,tests);
}

getTests(function (err,tests) {

	if (err)
		process.exit(-1);

    tests=tests.sort(function(a, b) {
		return a < b ? -1 : 1;
    });

	var i = 0;
	(function () {

		if(tests.length == i)
		{
			console.log('');
			console.log('[*] '+validTests+' tests performed');
			console.log('[*] '+passedTests+' have been successfully executed');
			console.log('[*] '+(validTests-passedTests)+' failed');
			if (fs.existsSync(testDir))
				wrench.rmdirSyncRecursive(testDir);
			process.exit(wns.console.errors);
		}

		var args = arguments;
		if (tests[i].split('.').pop()!='js')
		{
			i++;
			args.callee();
		} else {
			wns.console.getEvent('endTest').once(function () {
				clearTimeout(testTimeout);
				if (lastErrors == wns.console.errors)
					passedTests++;
				i++;
				validTests++;
				args.callee();
			});
			testTimeout=setTimeout(function () {
				wns.console.errors++;
				wns.console.e.endTest();
			},10000);
			process.nextTick(function () {
				try {
					console.log('[*] Running: '+tests[i]);
					lastErrors = wns.console.errors;
					refreshIdle();
					wns.console.exec(wns.console.getFile('./test/'+tests[i]));
				} catch (e)
				{
					wns.console.e.errorTest(e);
					wns.console.errors++;
					wns.console.e.endTest();
				}
			});	
		}

	})(i);

});