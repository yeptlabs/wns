// Default Application Configuration
{

	// Application Name
	"title": "WebApp",

	// Path to respective directories
	"path": {
		"app": "app/",
		"lib": "lib/",
		"controllers": "controllers/",
		"public": "public/",
		"views": "views/"
	},

	// wnHttpRequest default configuration
	"http":{

		// Default HTTP Header.
		"header": {
			"Connection": "closed"
		},

		"defaultController":"",
		"contentType": {},
		"serveralias": "",
		"errorPage": "",

		// wnUrlManager configuration
		"urlManager": {}

	},

	// wnView configuration
	"view": {
		"titleTemplate": "{app.config.title} - {self.title}",
		"language": "en",
		"menu": {},
		"menuTemplate":"<ul>{list}</ul>",
		"menuItemTemplate":"<li><a href='{url}'>{label}</a></li>",
		"loadScriptPath": "js/"
	},

	// wnLog configuration
	"log": {
		"*": true,
		"access": true,
		"mysql": true,
		"notfound": true,
		"error": true,
		"trace": true
	}

}