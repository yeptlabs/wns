// wnApp default configuration.
{

	// Application Name
	"title": "Default WNS WebApp",

	// Path to respective directories
	"path": {
		"app": "app/",
		"lib": "lib/",
		"controllers": "controllers/",
		"public": "public/",
		"views": "views/",
		"classes": "classes/"
	},

	// Components
	"components": {

		// wnHttpRequest default configuration
		"http": {
			"class": "wnHttpRequest",

			// Default HTTP Header.
			"header": {
				"Connection": "closed"
			},

			"defaultController":"site",
			"contentType": {},
			"serveralias": "127.0.0.1",
			"errorPage": "site/error"
		},

		// wnCache.
		"cache": {
			"class": "wnCache",
			"alias": "cache"
		},

		// wnView default configuration
		"view": {
			"class": "wnView",
			"titleTemplate": "{self.title} - {app.title}",
			"language": "en",
			"menu": {},
			"menuTemplate":"<ul>{list}</ul>",
			"menuItemTemplate":"<li><a href='{url}'>{label}</a></li>",
			"loadScriptPath": "js/"
		},

		// wnUrlManager configuration
		"urlManager": {
			"class": "wnUrlManager"
		}

	},

	// Events
	"events": {
	
		"log": {
			"zone": {
				"*": true,
				"access": true,
				"mysql": true,
				"notfound": true,
				"trace": true,
				"exception": true,
				"stack": true
			},
			"eventName": "wnLog",
			"handler": "logHandler",
			"filters": ["filterLog"],
			"bubble": true
		},

		"exception": {
			"handler": "exceptionHandler",
			"eventName": "wnException"
		}

	}

}