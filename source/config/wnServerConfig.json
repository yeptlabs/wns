// wnServer default configuration.
{

	// Where the applications will be stored.
	"appDirectory": "app/",

	// Components
	"components": {

		// wnHttp default configuration
		"http": {
			"class": "wnHttp",
			// Listen on port and IP...
			"listen":[80,"0.0.0.0"]
		}

	},

	// Events
	"events": {
	
		"log": {
			"zone": {
				"*": true,
				"access": true,
				"mysql": true,
				"notfound": true,
				"trace": true,
				"exception": true,
				"stack": true
			},
			"eventName": "wnLog",
			"handler": "logHandler",
			"listenEvent": "module.log",
			"filters": ["filterLog"],
			"bubble": true
		},

		"exception": {
			"handler": "exceptionHandler",
			"eventName": "wnException"
		}

	}

}