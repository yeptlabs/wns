// wnServer default configuration.
{

	// Where the applications will be stored.
	"appDirectory": "app/",

	// Auto import
	"import": [],

	// Components
	"components": {},

	// Events
	"events": {
	
		"log": {
			"zone": {
				"*": true,
				"access": true,
				"mysql": true,
				"notfound": true,
				"trace": true,
				"exception": true,
				"stack": true
			},
			"eventName": "wnLog",
			"handler": "logHandler",
			"listenEvent": "module.log",
			"filters": ["filterLog"],
			"bubble": true
		},

		"exception": {
			"handler": "exceptionHandler",
			"eventName": "wnException"
		}

	}

}